<% provide :title, t(".sample_app") %>

<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="micropost_form">
        <%= render "shared/micropost_form" %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3><%= t "micropost_feed" %></h3>
      <%= render "shared/feed" %>
    </div>
  </div>
<% else %>

<div>
  <%= link_to t(".en"), locale: Settings.en %>
  <%= link_to t(".vi"), locale: Settings.vi %>
  <h1><%= t(".sample_app") %></h1>
  <p>
    <h2><%= t(".tutorial") %> <%= link_to t(".ruby_on_rails"), Settings.link_rails_tut %></h2>
  </p>
  <p><%= link_to t(".sign_up_now"), signup_path , class: "btn btn-lg btn-primary" %></p>
</div>
<%= link_to image_tag("rails.png", alt: "Rails logo", id: "rail-img"), Settings.ruby %>
<% end %>
